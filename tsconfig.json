{
  "compilerOptions": {
    "outDir": "./out-tsc",
    "target": "es6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/components/*": [
        "client/components/*"
      ],
      "~/pages": [
        "client/pages/index.ts"
      ],
      "~/hooks": [
        "client/hooks/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "./src"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "jest-setup.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ]
}
